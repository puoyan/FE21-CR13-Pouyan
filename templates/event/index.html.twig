{% extends '/event/base.html.twig' %}



{% block body %}
<div class="container">
    <h2>Events</h2>
    <div class="row">
        {% for event in events %}
            <div class="col-md-4">
                <div class="card mb-3 mx-auto d-block" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title text-danger">{{ event.name }}</h5>
                        <p class="card-text">Date: {{ event.date|date('F j, Y, g:i a') }}</p>
                        <p>{{event.phone }}</p>
                        <a href="/edit/{{ event.id }}" class="btn btn-success">Edit</a>
                        <a href="/details/{{ event.id }}" class="btn btn-primary">Details</a>
                        <a href="/delete/{{ event.id }}" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
